# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=creditcard_stream
KAFKA_GROUP_ID=fraud-consumer
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_MAX_POLL_INTERVAL_MS=300000

# MongoDB
MONGO_URI=mongodb://localhost:27018
MONGO_DB=fraudDB
MONGO_COLLECTION=transactions

# Model artifacts
ARTIFACT_DIR=artifacts
MODEL_PATH=artifacts/fraud_model.pkl
SCALER_PATH=artifacts/scaler.pkl
FEATURES_PATH=artifacts/feature_names.json
THRESHOLD_PATH=artifacts/threshold.json
MODEL_THRESHOLD=0.5

# Producer controls
PRODUCER_SLEEP_SEC=0.5

# Streamlit dashboard
DASHBOARD_REFRESH_SEC=2
DASHBOARD_LIMIT=10000
DASHBOARD_THEME=Dark

# Logging
LOG_LEVEL=INFO
